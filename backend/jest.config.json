{
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "routes/**/*.js",
    "config/**/*.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["./tests/setup.js"],
  "testTimeout": 10000,
  "setupFiles": ["./tests/setup.js"]
}
