/* GameBoard.css - Estilos para la mesa de juego adaptativa */

.game-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
  color: white;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.game-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 20px;
}

/* ===== LOADING & ERROR SCREENS ===== */
.loading-screen,
.error-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  text-align: center;
  padding: 20px;
}

.loading-screen {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
}

.error-screen {
  background: linear-gradient(135deg, #2d1b69 0%, #11998e 100%);
}

.spinner {
  width: 60px;
  height: 60px;
  border: 4px solid rgba(255, 255, 255, 0.3);
  border-top: 4px solid #f7b733;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-message {
  font-size: 1.2em;
  color: #f7b733;
  margin-bottom: 20px;
}

/* ===== GAME BOARD CONTAINER ===== */
.game-board-container {
  position: relative;
  width: 100%;
  height: 70vh;
  max-height: 800px;
  margin-bottom: 5vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.player-avatars-container {
  position: relative;
  width: 700px;
  height: 700px;
  border-radius: 50%;
  border: 3px solid rgba(247, 183, 51, 0.3);
  background: radial-gradient(circle, rgba(15, 32, 39, 0.8) 0%, rgba(44, 83, 100, 0.4) 100%);
  box-shadow: 
    inset 0 0 50px rgba(247, 183, 51, 0.1),
    0 0 50px rgba(0, 0, 0, 0.5);
}

.player-slot {
  position: absolute;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  z-index: 10;
}

/* ===== POSICIONES PARA 2 JUGADORES (1v1) ===== */
.player-count-2 .player-slot-0 { 
  top: 85%; 
  left: 50%; 
}

.player-count-2 .player-slot-1 { 
  top: 15%; 
  left: 50%; 
}

/* ===== POSICIONES PARA 4 JUGADORES (2v2) ===== */
.player-count-4 .player-slot-0 { 
  top: 85%; 
  left: 50%; 
}

.player-count-4 .player-slot-1 { 
  top: 50%; 
  left: 15%; 
}

.player-count-4 .player-slot-2 { 
  top: 15%; 
  left: 50%; 
}

.player-count-4 .player-slot-3 { 
  top: 50%; 
  left: 85%; 
}

/* ===== POSICIONES PARA 6 JUGADORES (3v3) ===== */
.player-count-6 .player-slot-0 { 
  top: 85%; 
  left: 50%; 
}

.player-count-6 .player-slot-1 { 
  top: 75%; 
  left: 15%; 
}

.player-count-6 .player-slot-2 { 
  top: 25%; 
  left: 15%; 
}

.player-count-6 .player-slot-3 { 
  top: 15%; 
  left: 50%; 
}

.player-count-6 .player-slot-4 { 
  top: 25%; 
  left: 85%; 
}

.player-count-6 .player-slot-5 { 
  top: 75%; 
  left: 85%; 
}

/* ===== PLAYER AVATARS ===== */
.player-avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 12px;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 15px;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  min-width: 100px;
}

.player-avatar.turn-active {
  border-color: #f7b733;
  transform: scale(1.15);
  box-shadow: 
    0 0 20px rgba(247, 183, 51, 0.8),
    0 0 40px rgba(247, 183, 51, 0.4);
  background: rgba(247, 183, 51, 0.2);
}

.player-avatar.current-player {
  border-color: #4a90e2;
  background: rgba(74, 144, 226, 0.2);
}

.avatar-image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-size: cover;
  border: 3px solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.2em;
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
}

.avatar-image.team-1 { 
  border-color: #4a90e2; 
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
}

.avatar-image.team-2 { 
  border-color: #d0021b; 
  background: linear-gradient(135deg, #d0021b 0%, #a8001a 100%);
}

.player-name {
  font-weight: 600;
  font-size: 0.9em;
  text-align: center;
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
  max-width: 80px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.player-connection-status {
  font-size: 0.7em;
  color: #ccc;
  margin-top: 2px;
}

.player-connection-status.connected {
  color: #4caf50;
}

.player-connection-status.disconnected {
  color: #f44336;
}

/* ===== CARTAS EN MESA ===== */
.played-cards-area {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  gap: 25px;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  max-width: 400px;
  z-index: 5;
}

.played-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 12px;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 10px;
  backdrop-filter: blur(5px);
  transition: all 0.3s ease;
}

.played-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
}

.played-card img {
  width: 90px;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  transition: transform 0.2s ease;
}

.played-card img:hover {
  transform: scale(1.05);
}

.played-card-player {
  font-size: 0.8em;
  background-color: rgba(247, 183, 51, 0.8);
  padding: 4px 8px;
  border-radius: 6px;
  color: #1a1a1a;
  font-weight: 600;
  text-shadow: none;
}

/* ===== GAME HEADER ===== */
.game-header {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 2px solid rgba(247, 183, 51, 0.3);
  padding: 15px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 15px;
}

.game-header-left,
.game-header-right {
  display: flex;
  align-items: center;
  gap: 15px;
}

.btn-back-to-rooms {
  display: flex;
  align-items: center;
  gap: 8px;
  background: rgba(74, 144, 226, 0.8);
  color: white;
  border: none;
  padding: 10px 15px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 600;
}

.btn-back-to-rooms:hover {
  background: rgba(74, 144, 226, 1);
  transform: translateY(-2px);
}

.room-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.room-code {
  display: flex;
  align-items: center;
  gap: 8px;
  background: rgba(255, 255, 255, 0.1);
  padding: 8px 12px;
  border-radius: 6px;
  font-family: 'Courier New', monospace;
  font-weight: bold;
}

.btn-copy-code {
  background: none;
  border: none;
  color: #f7b733;
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
  transition: all 0.2s ease;
}

.btn-copy-code:hover {
  background: rgba(247, 183, 51, 0.2);
  transform: scale(1.1);
}

.round-info {
  font-size: 0.9em;
  color: #ccc;
}

.teams-score {
  display: flex;
  gap: 30px;
  align-items: center;
}

.team-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 15px 20px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  min-width: 120px;
  backdrop-filter: blur(5px);
}

.team-score.team-1 {
  border: 2px solid rgba(74, 144, 226, 0.5);
}

.team-score.team-2 {
  border: 2px solid rgba(208, 2, 27, 0.5);
}

.team-info {
  display: flex;
  align-items: center;
  gap: 6px;
  font-weight: 600;
  font-size: 0.9em;
}

.team-icon {
  color: #f7b733;
}

.score-display {
  display: flex;
  align-items: center;
  gap: 5px;
  font-size: 1.8em;
  font-weight: bold;
}

.current-score {
  color: #f7b733;
}

.score-separator {
  color: #ccc;
  font-size: 0.8em;
}

.target-score {
  color: #ccc;
  font-size: 0.8em;
}

.game-status {
  display: flex;
  align-items: center;
  gap: 8px;
}

.status-text {
  background: rgba(76, 175, 80, 0.8);
  color: white;
  padding: 8px 12px;
  border-radius: 6px;
  font-weight: 600;
  font-size: 0.9em;
}

/* ===== PLAYER HAND ===== */
.player-hand {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  max-width: 800px;
  width: 90%;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(247, 183, 51, 0.3);
  border-radius: 15px;
  padding: 15px;
  z-index: 100;
  box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.5);
}

.hand-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
  font-weight: 600;
}

.turn-indicator {
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 0.9em;
  font-weight: 600;
}

.turn-indicator:not(.active) {
  background: rgba(255, 255, 255, 0.1);
  color: #ccc;
}

.turn-indicator.active {
  background: rgba(247, 183, 51, 0.8);
  color: #1a1a1a;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.cards-container {
  display: flex;
  justify-content: center;
  gap: 15px;
  flex-wrap: wrap;
}

.card-wrapper {
  transition: all 0.3s ease;
  cursor: pointer;
}

.card-wrapper.playable:hover {
  transform: translateY(-10px) scale(1.05);
}

.card-wrapper.played {
  opacity: 0.5;
  cursor: not-allowed;
}

.card-container {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.card-image {
  width: 100px;
  height: auto;
  display: block;
  transition: all 0.3s ease;
}

.card-played-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  font-size: 0.9em;
}

.card-info {
  padding: 8px;
  background: rgba(0, 0, 0, 0.8);
  text-align: center;
}

.card-values {
  display: flex;
  justify-content: space-between;
  font-size: 0.8em;
  font-weight: 600;
}

.envido-value {
  color: #4caf50;
}

.truco-value {
  color: #f44336;
}

.hand-placeholder,
.empty-hand {
  text-align: center;
  padding: 40px;
  color: #ccc;
  font-style: italic;
}

/* ===== ACTIONS PANEL ===== */
.actions-panel {
  position: fixed;
  top: 50%;
  right: 20px;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(247, 183, 51, 0.3);
  border-radius: 15px;
  padding: 20px;
  min-width: 250px;
  max-width: 300px;
  z-index: 90;
}

.panel-title {
  text-align: center;
  font-weight: 600;
  font-size: 1.1em;
  margin-bottom: 20px;
  color: #f7b733;
  border-bottom: 1px solid rgba(247, 183, 51, 0.3);
  padding-bottom: 10px;
}

.action-groups {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.action-group {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.group-title {
  font-weight: 600;
  font-size: 0.9em;
  color: #ccc;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.btn-action {
  padding: 12px 16px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9em;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-action:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.btn-envido,
.btn-real-envido,
.btn-falta-envido {
  background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
  color: white;
}

.btn-truco,
.btn-retruco,
.btn-vale-cuatro {
  background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
  color: white;
}

.btn-quiero {
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: white;
}

.btn-no-quiero,
.btn-mazo {
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  color: white;
}

.btn-declare-points,
.btn-son-buenas {
  background: linear-gradient(135deg, #9c27b0 0%, #7b1fa2 100%);
  color: white;
}

.btn-confirm {
  background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
  color: white;
}

.btn-cancel {
  background: linear-gradient(135deg, #757575 0%, #424242 100%);
  color: white;
}

/* Panels específicos */
.envido-declaration,
.response-panel {
  border-color: rgba(247, 183, 51, 0.8);
  box-shadow: 0 0 20px rgba(247, 183, 51, 0.3);
}

.envido-actions,
.response-actions {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.envido-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.envido-input {
  padding: 10px;
  border: 2px solid rgba(247, 183, 51, 0.5);
  border-radius: 6px;
  background: rgba(255, 255, 255, 0.1);
  color: white;
  font-size: 1em;
  text-align: center;
}

.envido-input:focus {
  outline: none;
  border-color: #f7b733;
  box-shadow: 0 0 10px rgba(247, 183, 51, 0.3);
}

/* ===== GAME BOARD MEJORADO ===== */
.game-board-mejorado {
  position: relative;
  width: 100%;
  height: 750px;
  background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
  overflow: visible;
  display: flex;
  flex-direction: column;
  padding: 120px 0;
}

/* ===== JUGADORES CON PERSPECTIVA ===== */
.jugadores-perspectiva {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 10;
}

.jugadores-top {
  position: absolute;
  top: -80px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
  z-index: 20;
}

.jugadores-bottom {
  position: absolute;
  bottom: -80px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
  z-index: 20;
}

/* ===== AVATARES HORIZONTALES ===== */
.avatar-horizontal {
  pointer-events: auto;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 12px;
  padding: 10px 15px;
  border: 2px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  min-width: 200px;
  z-index: 15;
  position: relative;
}

.avatar-horizontal.current-player {
  border-color: #4a90e2;
  background: rgba(74, 144, 226, 0.15);
  box-shadow: 0 0 20px rgba(74, 144, 226, 0.3);
}

.avatar-horizontal.current-player.jugador-actual-avatar {
  border: 3px solid #4caf50;
  background: rgba(76, 175, 80, 0.15);
  box-shadow: 0 0 25px rgba(76, 175, 80, 0.4);
}

.avatar-horizontal.opponent-player {
  border-color: #8b1538;
  background: rgba(139, 21, 56, 0.2);
  box-shadow: 0 0 20px rgba(139, 21, 56, 0.3);
}

.avatar-horizontal.teammate-player {
  border-color: #2e7d32;
  background: rgba(46, 125, 50, 0.15);
  box-shadow: 0 0 20px rgba(46, 125, 50, 0.3);
}

.teammate-indicator {
  font-size: 10px;
  color: #4caf50;
  font-weight: bold;
  margin-top: 2px;
}

.avatar-horizontal.on-turn {
  border-color: #f7b733;
  background: rgba(247, 183, 51, 0.15);
  box-shadow: 0 0 25px rgba(247, 183, 51, 0.4);
  animation: pulse-turn 2s infinite;
}

.avatar-content {
  display: flex;
  align-items: center;
  gap: 12px;
  position: relative;
}

.avatar-image-horizontal {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 16px;
  color: white;
  border: 3px solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.avatar-image-horizontal.team-1 {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  border-color: #4a90e2;
}

.avatar-image-horizontal.team-2 {
  background: linear-gradient(135deg, #d0021b 0%, #a8001a 100%);
  border-color: #d0021b;
}

.avatar-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.player-name-horizontal {
  font-weight: 600;
  font-size: 14px;
  color: white;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
}

.player-status {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
}

.connection-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
}

.connection-dot.conectado {
  background: #4caf50;
  box-shadow: 0 0 6px rgba(76, 175, 80, 0.6);
}

.connection-dot.desconectado {
  background: #f44336;
  box-shadow: 0 0 6px rgba(244, 67, 54, 0.6);
}

.status-text {
  color: #ccc;
}

.cards-count {
  font-size: 11px;
  color: #f7b733;
  font-weight: 600;
}

.turn-indicator-horizontal {
  position: absolute;
  top: -8px;
  right: -5px;
  background: #f7b733;
  color: #000;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 10px;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 3px;
  animation: bounce-indicator 1s infinite;
}

.turn-pulse {
  animation: pulse-lightning 1.5s infinite;
}

@keyframes pulse-turn {
  0%, 100% { 
    box-shadow: 0 0 25px rgba(247, 183, 51, 0.4);
  }
  50% { 
    box-shadow: 0 0 35px rgba(247, 183, 51, 0.7);
  }
}

@keyframes bounce-indicator {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-3px); }
}

@keyframes pulse-lightning {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* ===== MESA CONTAINER ===== */
.mesa-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

/* ===== MESA JUEGO MEJORADA ===== */
.mesa-juego-mejorada {
  width: 100%;
  max-width: 1200px; /* Aumentado para 2v2 */
  height: 600px; /* Aumentado para mejor separación */
  position: relative;
  display: flex;
  flex-direction: column;
}

.superficie-mesa {
  flex: 1;
  background: 
    radial-gradient(ellipse at center, rgba(34, 139, 34, 0.8) 0%, rgba(0, 100, 0, 0.9) 100%),
    linear-gradient(45deg, rgba(0, 100, 0, 0.1) 25%, transparent 25%), 
    linear-gradient(-45deg, rgba(0, 100, 0, 0.1) 25%, transparent 25%), 
    linear-gradient(45deg, transparent 75%, rgba(0, 100, 0, 0.1) 75%), 
    linear-gradient(-45deg, transparent 75%, rgba(0, 100, 0, 0.1) 75%);
  background-size: 100% 100%, 20px 20px, 20px 20px, 20px 20px, 20px 20px;
  background-position: 0 0, 0 0, 0 10px, 10px -10px, -10px 0px;
  border: 3px solid #228b22;
  border-radius: 20px;
  box-shadow: 
    inset 0 0 50px rgba(0, 0, 0, 0.3),
    0 10px 30px rgba(0, 0, 0, 0.4);
  position: relative;
  overflow: visible;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mesa-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255, 255, 255, 0.02) 10px,
      rgba(255, 255, 255, 0.02) 20px
    );
}

.mesa-vacia-estado {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: relative;
}

.mesa-vacia-content {
  text-align: center;
  z-index: 2;
}

.icono-cartas {
  font-size: 4rem;
  opacity: 0.3;
  margin-bottom: 15px;
  animation: float-card 3s ease-in-out infinite;
}

.mesa-vacia-content p {
  color: rgba(255, 255, 255, 0.7);
  font-size: 16px;
  font-weight: 500;
}

/* ===== CARTAS POSICIONADAS CON PERSPECTIVA ===== */
.cartas-posicionadas-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.cartas-jugador-posicionadas {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
}

/* Cartas del jugador actual - arriba de su avatar (parte inferior de la mesa) */
.cartas-jugador-posicionadas.jugador-actual-cartas {
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
}

/* Cartas de los oponentes - debajo de sus avatares (parte superior de la mesa) */
.cartas-jugador-posicionadas.oponente-cartas {
  top: -10px;
  left: 50%;
  transform: translateX(-50%);
}

/* Para múltiples oponentes, distribuir horizontalmente */
.cartas-jugador-posicionadas.oponente-cartas.oponente-1 {
  left: 30%;
}

.cartas-jugador-posicionadas.oponente-cartas.oponente-2 {
  left: 70%;
}

.cartas-jugador-posicionadas.oponente-cartas.oponente-3 {
  left: 25%;
}

.cartas-jugador-posicionadas.oponente-cartas.oponente-4 {
  left: 75%;
}

/* ===== DISTRIBUCIÓN 2x2 PARA 2v2 ===== */
.jugadores-perspectiva.cuatro-jugadores-2x2 {
  width: 100%;
  height: 100%;
  position: relative;
}

.jugadores-top.cuatro-jugadores-2x2,
.jugadores-bottom.cuatro-jugadores-2x2 {
  position: absolute;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15%;
  z-index: 20;
}

.jugadores-top.cuatro-jugadores-2x2 {
  top: -80px;
}

.jugadores-bottom.cuatro-jugadores-2x2 {
  bottom: -80px;
}

.posicion-top-left,
.posicion-top-right,
.posicion-bottom-left,
.posicion-bottom-right {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 250px;
  flex: 1;
  max-width: 300px;
}

/* Espaciado específico para avatares en 2x2 */
.jugadores-perspectiva.cuatro-jugadores-2x2 .avatar-horizontal {
  margin: 5px;
  min-width: 220px;
  max-width: 280px;
  padding: 12px 16px;
}

/* ===== POSICIONAMIENTO DE CARTAS PARA 2x2 ===== */
/* Cartas debajo de cada avatar según su posición fija */
.cartas-jugador-posicionadas.posicion-top-left {
  position: absolute;
  top: 10%;
  left: 20%;
  transform: translateX(-50%);
  z-index: 12;
}

.cartas-jugador-posicionadas.posicion-top-right {
  position: absolute;
  top: 10%;
  right: 20%;
  transform: translateX(50%);
  z-index: 12;
}

.cartas-jugador-posicionadas.posicion-bottom-left {
  position: absolute;
  bottom: 10%;
  left: 20%;
  transform: translateX(-50%);
  z-index: 12;
}

.cartas-jugador-posicionadas.posicion-bottom-right {
  position: absolute;
  bottom: 10%;
  right: 20%;
  transform: translateX(50%);
  z-index: 12;
}

/* Posicionamiento específico para 3v3 con distribución alternada */
.cartas-jugador-posicionadas.oponente-cartas.compañero-3v3-1 {
  left: 50%;
  background: rgba(46, 125, 50, 0.1);
  border: 2px solid rgba(46, 125, 50, 0.3);
}

.cartas-jugador-posicionadas.oponente-cartas.compañero-3v3-2 {
  left: 30%;
  background: rgba(46, 125, 50, 0.1);
  border: 2px solid rgba(46, 125, 50, 0.3);
}

.cartas-jugador-posicionadas.oponente-cartas.oponente-3v3-1 {
  left: 20%;
}

.cartas-jugador-posicionadas.oponente-cartas.oponente-3v3-2 {
  left: 80%;
}

.cartas-jugador-posicionadas.oponente-cartas.oponente-3v3-3 {
  left: 70%;
}

/* Posicionamiento específico para 3v3 */
.cartas-jugador-posicionadas.oponente-cartas.oponente-3v3-4 {
  left: 30%;
}

.cartas-jugador-posicionadas.oponente-cartas.oponente-3v3-5 {
  left: 70%;
}

.jugador-label-cartas {
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 4px 12px;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 600;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(5px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.cartas-solapadas {
  position: relative;
  display: flex;
  align-items:  flex-end;
  height: 130px; /* Altura aumentada para las cartas más grandes */
}

.carta-solapada {
  position: relative;
  transition: all 0.3s ease;
}

.carta-solapada:hover {
  transform: translateY(-20px) scale(1.08) !important;
  z-index: 999 !important;
  margin-left: 0 !important;
}

.carta-en-mesa {
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 10px;
  transition: all 0.3s ease;
  box-shadow: 
    0 6px 12px rgba(0, 0, 0, 0.4),
    0 0 0 1px rgba(255, 255, 255, 0.1);
}

.carta-en-mesa:hover {
  border-color: rgba(247, 183, 51, 0.8);
  box-shadow: 
    0 12px 24px rgba(0, 0, 0, 0.5),
    0 0 25px rgba(247, 183, 51, 0.4);
}

/* ===== MESA INFO ===== */
.mesa-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 15px;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(5px);
  border-radius: 0 0 17px 17px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.mano-actual {
  color: white;
  font-weight: 600;
  font-size: 14px;
}

.ganador-info {
  color: #f7b733;
  font-weight: 600;
  font-size: 12px;
  animation: celebration 1s ease-in-out infinite alternate;
}

@keyframes float-card {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

@keyframes celebration {
  from { opacity: 0.8; }
  to { opacity: 1; }
}

